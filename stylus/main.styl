@import 'nib'
@import 'nib/vendor'
@import 'nib/gradients'

@import 'normalize'
@import 'iconos'

@import 'mixin'

iconitos = 'icomoon'

fontBody = 'Lato', sans-serif

*
  margin 0
  padding 0
  box-sizing border-box

a
  text-decoration none
  display block
  color ColorBlue

body
  color #3e3f3a
  font-family fontBody
  font-size 16px
  font-weight 300
  line-height 1.5
  text-align center
  text-rendering optimizeLegibility

figure
header
section
footer
article
  display block
  margin 0
  padding 0

img
  max-width 100%
  width auto

p
  margin 0 0 10px

ul
  list-style-type none
  margin 0
  padding 0
div
  display block

textarea
input[type=text]
input[type=password]
input[type=search]
input[type=email]
input[type=url]
  background #eee url('../img/bg-Body.jpg')
  border 0
  border-radius 10px
  box-sizing border-box
  font-size 1.2em
  height 50px
  line-height 1.2
  padding 5px 15px 5px 35px
  width 100%
  margin-bottom 20px
  box-shadow inset 2px 2px 0 rgba(187,187,187,.7)

textarea
  height 100px
  padding-left 15px
  resize none

textarea
input[type=text]
input[type=password]
input[type=search]
input[type=email]
input[type=url]
  &:focus
    box-shadow 0px 0px 0px 2px ColorCoral
    outline none
    border transparent

input[type=reset]
input[type=submit]
button
.Btn
  background ColorCoral
  border 0
  border-radius 10px
  color #fff
  font-size 1.3em
  font-weight bold
  margin-bottom 20px
  outline none
  padding 8px 20px
  text-transform uppercase
  width 100%

  &:hover
    background #b03a3d


// main
hr
  border none
  border-bottom 1px dashed #b7b7b7
  margin 30px auto 10px auto
  padding 0
  width 80%

pre
  background #ece8e6
  color #333333
  padding .5em

p code
  background ColorBlue
  color #fff
  padding 0 .5em 0 .5em
  border-radius 5px

blockquote
  color #9d9d9d
  width 90%
  margin 0 auto
  font-style italic
  position relative
  padding 1em 0 1em 1em
  &:before
    position absolute
    left -1em
    font-size 1.5em
    content "\e60a"
    top .5em

ol
  list-style-type none
  margin 0
  margin-left 1em
  padding 0
  counter-reset li-counter

  li
    position relative
    margin-bottom 20px
    padding-left 0.5em
    border-left 2px solid #CCCCCC

    &:before
      position absolute
      top 0
      left -1em
      width 0.8em
      line-height 1
      font-weight bold
      text-align right
      color ColorBlue

      content counter(li-counter)
      counter-increment li-counter

::selection
  background #fba919
  color #444
  text-shadow 1px 1px #fff

@import 'body'
@import 'keyframes'
